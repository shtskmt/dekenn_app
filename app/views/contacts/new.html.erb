<div class="container">
<div class="col-lg-8 offset-lg-2 col-md-6 offset-md-3">
<%= form_for(@contact, url: {controller: 'contacts', action: 'create'}) do |f|%>
  <%= render 'layouts/error_messages', model: f.object %>
  <div class="form-group">
  <%= f.label :name, 'お名前' %>
  <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :email, '連絡先' %>
    <%= f.text_field :email, class: 'form-control' %>
  </div>

 <div class="form-group">
   <%= f.label :message, 'お問い合わせ内容' %>
   <%= f.text_area :message, size: '10x10', class: 'form-control' %>
 </div>

  <%= f.submit('send', class: "btn-sticky") %>

<% end %>
</div>
</div>
